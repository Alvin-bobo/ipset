def set_options(opt):
    opt.tool_options("compiler_cxx")


def configure(conf):
    conf.check_tool("compiler_cxx")


def build(bld):
    def make_test(test_name):
        test = bld(
            features = "cxx cprogram",
            source = "%s.cc" % test_name,
            target = test_name,
            uselib = "GLOG",
            uselib_local = "UnitTest ipset",
            install_path = None,
            includes = [
                "../UnitTest++/src",
                "../include",
            ],
            rpath = [
                "$ORIGIN/../src",
            ],
        )

        test.unit_test = True

    make_test("test-assignment")
    make_test("test-bdd")
    make_test("test-endianness")
    make_test("test-ip")
    make_test("test-set")
    make_test("test-set-io")
    make_test("test-utils")
